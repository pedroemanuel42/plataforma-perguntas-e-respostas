<body>
    <%- include ('./partials/navbar.ejs') %>

    <div class="container">  
        <div class="card" id="form-ask">
            <div class="card-header">
                <h3>Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form method="post" action="/asksave">
                    <label>Título</label>
                    <input type="text" placeholder="Título" class="form-control" name="title">
                    <br>
                    <label>Descrição</label>
                    <textarea cols="30" rows="10" placeholder="Descreva sua pergunta aqui" class="form-control" name="description"></textarea>
                    <br>
                    <button class="btn btn-primary">Perguntar</button>
                </form>
            </div>
        </div>
    </div>   
</body>

